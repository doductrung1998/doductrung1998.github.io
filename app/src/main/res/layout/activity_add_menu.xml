<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="160dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/img_Add_Menu" />

    <Button
        android:text="Chụp hình"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginTop="30dp"
        android:id="@+id/btn_Add_ChupHinh" />

    <Button
        android:text="Chọn Hình"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Add_ChonHinh"
        android:layout_below="@+id/btn_Add_ChupHinh"
        android:layout_alignLeft="@+id/btn_Add_ChupHinh"
        android:layout_alignStart="@+id/btn_Add_ChupHinh" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_below="@+id/edt_Add_Id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/edt_Add_Ten"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:text="Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/edt_Add_Ten"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/edt_Add_GiaTien"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_Add_GiaTien"
        android:layout_alignRight="@+id/img_Add_Menu"
        android:layout_alignEnd="@+id/img_Add_Menu"
        android:id="@+id/btn_add_ok" />

    <Button
        android:text="Hủy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add_huy"
        android:layout_below="@+id/edt_Add_GiaTien"
        android:layout_alignLeft="@+id/btn_Add_ChonHinh"
        android:layout_alignStart="@+id/btn_Add_ChupHinh" />

    <EditText
        android:id="@+id/edt_Add_Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/img_Add_Menu"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="ID"
        android:layout_alignParentLeft="true" />
</RelativeLayout>